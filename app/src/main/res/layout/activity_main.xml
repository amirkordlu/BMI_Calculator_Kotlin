<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/weight_ed"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="70dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="13dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/kaivenregular"
        android:gravity="center"
        android:hint="_ _"
        android:inputType="number|numberDecimal"
        android:textColor="#505050"
        android:textColorHint="#505050"
        android:textSize="34dp"
        app:layout_constraintBottom_toTopOf="@+id/calculate_btn"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/height_ed"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="70dp"
        android:layout_marginBottom="12dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/kaivenregular"
        android:gravity="center"
        android:hint="_ _"
        android:inputType="number|numberDecimal"
        android:textColor="#505050"
        android:textColorHint="#505050"
        android:textSize="34dp"
        app:layout_constraintBottom_toTopOf="@+id/calculate_btn"
        app:layout_constraintEnd_toStartOf="@+id/weight_ed"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toEndOf="@+id/age_ed" />

    <EditText
        android:id="@+id/age_ed"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="12dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/kaivenregular"
        android:gravity="center"
        android:hint="_ _"
        android:inputType="number|numberDecimal"
        android:textColor="#505050"
        android:textColorHint="#505050"
        android:textSize="34dp"
        app:layout_constraintBottom_toTopOf="@+id/calculate_btn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/calculate_btn"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#80C8C0"
        android:backgroundTint="#80C8C0"
        android:fontFamily="@font/kaivenregular"
        android:text="Calculate BMI"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/bmi_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="112dp"
        android:fontFamily="@font/kaivenregular"
        android:gravity="center"
        android:maxLength="4"
        android:text="BMI"
        android:textFontWeight="@integer/material_motion_duration_medium_2"
        android:textColor="#E95C5C"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/kaivenregular"
        android:text="Weight"
        android:textColor="#888888"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/weight_ed"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/kaivenregular"
        android:text="Height"
        android:textColor="#888888"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/weight_ed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/kaivenregular"
        android:text="Age"
        android:textColor="#888888"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/weight_ed"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="39dp"
        android:layout_height="60dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="│"
        android:textColor="#D1D1D1"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/calculate_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.688"
        app:layout_constraintStart_toStartOf="parent"></TextView>

    <TextView
        android:layout_width="39dp"
        android:layout_height="60dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="│"
        android:textColor="#D1D1D1"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/calculate_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.314"
        app:layout_constraintStart_toStartOf="parent"></TextView>

    <ImageView
        android:id="@+id/female_img"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginBottom="171dp"
        android:src="@drawable/ic_female_pink"
        app:layout_constraintBottom_toTopOf="@+id/calculate_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.739"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/male_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="175dp"
        android:src="@drawable/ic_male_gray"
        app:layout_constraintBottom_toTopOf="@+id/calculate_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.273"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/kaivenregular"
        android:text="Male"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/male_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.288"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/kaivenregular"
        android:text="Female"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/female_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.733"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:src="@drawable/ic_heart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bmi_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/kaivenregular"
        android:gravity="center"
        android:text="Healthy"
        android:textColor="#3AA3A2"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


</androidx.constraintlayout.widget.ConstraintLayout>